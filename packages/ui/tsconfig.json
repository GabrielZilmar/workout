{
  "extends": "@workout/typescript-config/react-library.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "outDir": "dist/lib",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    /* Linting */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /** Paths */
    "baseUrl": ".",
    "paths": {
      "@workout/ui/*": ["./lib/*"]
    }
  },
  "include": ["lib"]
}
